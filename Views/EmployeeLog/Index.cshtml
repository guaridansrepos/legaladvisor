@model IEnumerable<Advocate_Invoceing.Models.DTO.EmployeeLogDTO>

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h5>Employee Logs</h5>
        </div>
        <div class="card-body table-border-style">
            <div class="table-responsive">
                <a href="@Url.Action("CreateEdit", "EmployeeLog")" class="btn btn-primary mb-3">Create New Log</a>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Action</th>
                            <th>Details</th>
                            <th>Action Date</th>
                            <th>Edited By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td>@log.UserId</td>
                                <td>@log.TaskTitle</td>
                                <td>@log.TaskDescription</td>
                                <td>@log.CreatedOn.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                <td>@log.CreatedBy</td>
                                <td>
                                    <a href="@Url.Action("CreateEdit", "EmployeeLog", new { id = log.UserId })" class="btn btn-warning btn-sm">Edit</a>
                                    <form action="@Url.Action("Delete", "EmployeeLog")" method="post" style="display:inline;">
                                        <input type="hidden" name="UserId" value="@log.UserId" />
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this log?');">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
