@model IEnumerable<Advocate_Invoceing.Models.DTO.InvoiceDTO>

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h5>Invoices List</h5>
        </div>
        <div class="card-body table-border-style">
            <div class="table-responsive">
                <a href="@Url.Action("CreateEdit", "Invoice")" class="btn btn-primary mb-3">Create New Invoice</a>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Invoice No</th>
                            <th>Client Name</th>
                            <th>Amount</th>
                            <th>Due Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var invoice in Model)
                            {
                                <tr>
                                    <td>@invoice.InvoiceId</td>
                                    <td>@invoice.InvoiceNumber</td>
                                    <td>@invoice.ClientName</td>
                                   
                                    <td>@invoice.Amount.HasValue ? invoice.Amount.Value.ToString("N2") : "N/A"</td>
                                    <td>@invoice.DueDate?.ToString("dd/MM/yyyy")</td>
                                    <td>@invoice.Status</td>
                                    <td>
                                        <a href="@Url.Action("CreateEdit", "Invoice", new { id = invoice.InvoiceId })" class="btn btn-warning btn-sm">Edit</a>
                                        <a href="@Url.Action("Delete", "Invoice", new { id = invoice.InvoiceId })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this invoice?');">Delete</a>
                                        <a href="@Url.Action("ViewInvoice", "Invoice", new { id = invoice.InvoiceId })" class="btn btn-info btn-sm">View</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
